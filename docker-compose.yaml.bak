version: "3"
services:
  nginx:
    image: nginx:alpine
    container_name: nginx
    environment:
      - PUID=1000
      - PGID=1000
      - TZ=Asia/Shanghai # 你的时区
    restart: unless-stopped
    volumes:
      - ./nginx.conf:/etc/nginx/nginx.conf
      - ./:/var/www
    ports:
      - "80:80"

  app:
    build:
      context: .
      dockerfile: Dockerfile
    container_name: app
    ports:
      - "9000:9000"
    stdin_open: true
    tty: true
    restart: always
    volumes:
      - ./:/var/www
      - ./run/php:/run/php
#      - ./www.conf:/etc/php/8.2/fpm/pool.d/www.conf
